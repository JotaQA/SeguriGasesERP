@model SeguriGasesERP.Models.OrdenDeCompra

@{
    ViewBag.Title = "Detalles de la orden de compra";
}

<h2>Details</h2>

<fieldset>
    <legend>Orden De Compra</legend>

    <div class="display-label">Fecha</div>
    <div class="display-field">@String.Format("{0:g}", Model.FechaGenerada)</div>

    <div class="display-label">Sucursal</div>
    <div class="display-field">@ViewBag.Sucursal.Nombre</div>

    <div class="display-label">Proveedor</div>
    <div class="display-field">@ViewBag.Proveedor.RazonSocial</div>

    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <th>
                    Cantidad
                </th>
                <th>
                    Producto
                </th>
            </tr>

            @foreach (var item in Model.Productos)
            {
                <tr>
                    <td>
                        <input type="text" name="cantidad@(item.IdProducto)" id="cantidad@(item.IdProducto)" value="@(item.cantidad)" />
                    </td>
                    <td>
                        @item.Producto.Nombre
                    </td>
                </tr>   
                
            }
        
        </table>
        if (ViewBag.Permiso == 1)
        {
            <input type="submit" value="Ingresar"/>
        }
    }
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Regresar a la Lista", "Index")
</p>

