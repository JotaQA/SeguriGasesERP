@model IEnumerable<SeguriGasesERP.Models.OrdenDeCompra>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <form action="OrdenesDeCompras/Create" method="get">
       <label for="NoProductos"> Número de productos a ordenar</label>
      <input type="text" name="NoProductos" id="NoProductos" size="4" />
      <input type="submit" value="Crear" />
   </form>
</p>
<table>
    <tr>
        <th></th>
        <th>
            Fecha Generada
        </th>
        <th>
            Sucursal
        </th>
        <th>
            Proveedor
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Ingresar", "Details", new { id=item.ID })
        </td>
        <td>
            @String.Format("{0:g}", item.FechaGenerada)
        </td>
        <td>
            @item.Sucursal.Nombre
        </td>
        <td>
            @item.Proveedor.RazonSocial
        </td>

    </tr>
}

</table>

