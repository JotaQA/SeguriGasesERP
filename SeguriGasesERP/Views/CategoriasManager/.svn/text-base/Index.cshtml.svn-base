@model IEnumerable<SeguriGasesERP.Models.Categoria>

@{
    ViewBag.Title = "Indice";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Padre
        </th>
        <th>
            Nombre
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID })
        </td>
        <td>
            @item.IdPadre
        </td>
        <td>
            @item.Nombre
        </td>
    </tr>
}

</table>

