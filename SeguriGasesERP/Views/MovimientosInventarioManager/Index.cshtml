@model IEnumerable<SeguriGasesERP.Models.MovimientoAlmacen>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            FechaMovimiento
        </th>
        <th>
            TipoMovimiento
        </th>
        <th>
            DescripcionMovimiento
        </th>
        <th>
            Count
        </th>
        <th>
            IdSucursal
        </th>
        <th>
            IdProducto
        </th>
        <th>
            IdOrednCompra
        </th>
        <th>
            IdVenta
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
