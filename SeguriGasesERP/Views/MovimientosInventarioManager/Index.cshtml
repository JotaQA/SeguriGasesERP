            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
            @String.Format("{0:g}", item.FechaMovimiento)
        </td>
        <td>
            @item.TipoMovimiento
        </td>
        <td>
            @item.DescripcionMovimiento
        </td>
