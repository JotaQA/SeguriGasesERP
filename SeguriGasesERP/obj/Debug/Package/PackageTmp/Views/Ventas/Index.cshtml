@model IEnumerable<SeguriGasesERP.Models.Venta>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Folio CFD
        </th>
        
        <th>
            Subtotal
        </th>
        <th>
            Total
        </th>       
        <th>
            FechaVenta
        </th>
        <th>
            Liquidado
        </th>
        <th>
            Sucursal
        </th>
        <th>
            Cliente
        </th>        
        <th>
            Realizó
        </th>
