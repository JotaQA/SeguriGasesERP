@model IEnumerable<SeguriGasesERP.Models.DotacionCilindros>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <p>
   <form action="Dotaciones/Create" method="get">
       <label for="NoProductos"> Número de Cilindros a dar en la Nueva dotacion</label>
      <input type="text" name="NoCilindros" id="NoCilindros" size="10px" />
      <input type="submit" value="Crear Dotación" />
   </form>
</p>
</p>
<table>
    <tr>
        <th>
            Cliente
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Cliente.NombreCliente)
        </td>
        <td>
            @Html.ActionLink("Ampliar", "Ampliar", new { id=item.ID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
